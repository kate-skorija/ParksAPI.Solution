@{
  Layout = "_Layout";
}

@model ParksClient.Models.Park

<div class="content">
  <h2>Add a New Park</h2>

  @using(Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class="form-control", required="required" })<br>

    @Html.LabelFor(model => model.State)
    @Html.TextBoxFor(model => model.State, new { @class="form-control", required="required" })<br>

    <label for="type">Type of Park</label>
    <select name="type">
      <option value="national">National Park</option>
      <option value="state">State Park</option>
    </select><br>

    @Html.LabelFor(model => model.Website)
    @Html.TextBoxFor(model => model.Website, new { @class="form-control", required="required" })<br>


    <input class="btn btn-dark" type="submit" value="Add New Park" />
  }
</div>